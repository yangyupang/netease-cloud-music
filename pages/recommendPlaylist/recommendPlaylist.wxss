/* pages/recommendPlaylist/recommendPlaylist.wxss */

.bg-img {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    filter: blur(10rpx);
    z-index: -1;
}

.cover-img {
    width: 404rpx;
    height: 280rpx;
    border-radius: 20rpx;
}

.play-name {
    font-size: 40rpx;
    font-weight: 600;
    color: #fff;
}

.creator-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.creator-nickname {
    margin-right: 10rpx;
}

.creator-signature {
    font-size: 30rpx;
    width: 80%;
}

.img-size {
    width: 70rpx;
    height: 70rpx;
}

.fixed-sty {
    width: 120rpx;
}

.song-box {
    padding: 30rpx 30rpx 0;
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.round-play {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}

.song-scr {
    background-color: #fff;
    height: 556rpx;
    margin-top: 20rpx;
}

.song-name {
    font-size: 34rpx;
}

.song-describe {
    font-size: 30rpx;
    color: rgb(209, 208, 208);
}