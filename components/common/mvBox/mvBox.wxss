.mv-main {
    margin: 40rpx 0;
}

.mv-left {
    position: relative;
    margin: 10rpx;
}

.mv-pic {
    height: 160rpx;
    width: 240rpx;
    border-radius: 20rpx;
}

.playCount {
    position: absolute;
    right: 10rpx;
    top: 5rpx;
    color: white;
    font-size: 28rpx;
}

.play-icon {
    margin-top: 4rpx;
    height: 30rpx;
    width: 30rpx;
}

.mv-right {
    margin: 10rpx;
    line-height: 40rpx;
}

.mv-title {
    font-size: 32rpx;
}

.mv-time {
    font-size: 28rpx;
    color: #bbbbbb;
    margin-top: 10rpx;
}