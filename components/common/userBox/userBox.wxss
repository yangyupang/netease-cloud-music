.user-main {
    margin: 40rpx 0;
    position: relative;
}

.user-pic {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.user-right {
    margin-left: 40rpx;
    line-height: 60rpx;
}

.user-title {
    height: 60rpx;
    font-size: 32rpx;
}

.user-info {
    height: 60rpx;
    font-size: 28rpx;
    width: 400rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.user-follow {
    color: #eda1a4;
    position: absolute;
    right: 20rpx;
    top: 50%;
    margin-top: -50rpx;
    height: 40rpx;
    font-size: 32rpx;
    padding: 10rpx 20rpx;
    line-height: 40rpx;
    border-radius: 40rpx;
    border: 1px solid #eda1a4;
}