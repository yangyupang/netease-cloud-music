/* components/homePage/card/Card.wxss */

.recommend-playlist {
    padding: 20rpx;
    font-size: 34rpx;
    font-weight: 600;
}

.playlist-square {
    border: 2rpx solid rgb(245, 245, 239);
    border-radius: 50rpx;
    padding: 20rpx;
    font-size: 34rpx;
}

.playlist-box {
    width: 31%;
    margin-bottom: 10rpx;
}

.playlistImg-size {
    width: 100%;
    height: 240rpx;
    border-radius: 10rpx;
}

.playlist-name {
    font-size: 30rpx;
    color: #989489;
    overflow: hidden;
    /* 将元素设为盒子伸缩模型显示 */
    display: -webkit-box;
    /* 伸缩方向设为垂直方向 */
    -webkit-box-orient: vertical;
    /* 超出3行隐藏，并显示省略号 */
    -webkit-line-clamp: 2;
}

.view-counts {
    top: 10rpx;
    right: 10rpx;
}

.view-count {
    top: 200rpx;
    left: 10rpx;
}

.view-img {
    width: 28rpx;
    height: 28rpx;
    margin-right: 6rpx;
}

.view-counts {
    font-size: 24rpx;
    color: white;
}

.vertical-bar {
    width: 6rpx;
    height: 36rpx;
    background-color: rgb(241, 241, 237);
    margin: 0 18rpx;
}

.font-siz {
    font-size: 40rpx;
}

.font-col {
    color: #E1E1E0;
}