/* components/singerPage/singerDetails/detailsHead/detailsHead.wxss */

.singer-name {
    color: #fff;
    bottom: 72rpx;
    left: 40rpx;
}

.btn {
    color: #fff;
    bottom: 60rpx;
    right: 40rpx;
    font-size: 32rpx;
}

.focus,
.messages {
    padding: 20rpx;
    border-radius: 60rpx;
}

.focus {
    background-color: red;
    margin-right: 10rpx;
}

.messages {
    background-color: rgba(203, 203, 202, .4);
}

.singer-img {
    height: 460rpx;
    width: 100%;
}

.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 1001;
    filter: alpha(opacity=70);
}

.show {
    text-align: center;
    position: absolute;
    top: 20%;
    width: 100%;
    background-color: white;
    z-index: 1002;
    overflow: auto;
    height: 240px;
}

.save {
    position: absolute;
    bottom: 5%;
    z-index: 1003;
    color: #fff;
    border: 2rpx solid #fff;
    padding: 20rpx;
    border-radius: 50rpx;
    left: 33%;
}